<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chien2"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button1"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="46sp"
        android:background="@drawable/chien_03" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46sp"
        android:background="@drawable/chien_04" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/button1"
        android:background="@drawable/chien_05" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="0sp"
        android:background="@drawable/chien_07" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button3"
        android:layout_marginTop="0sp"
        android:background="@drawable/chien_09" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0sp"
        android:background="@drawable/chien_08" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100sp
        "
        android:layout_height="140sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button4"
        android:layout_marginTop="0sp"
        android:background="@drawable/chien_10" />

    <Button
        android:id="@+id/button9"
        android:layout_width="100sp
        "
        android:layout_height="140sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button6"
        android:background="@drawable/chien_12" />
    <Button android:id="@+id/button8"
        android:layout_width="100sp
        "
        android:layout_height="140sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/chien_11"
        android:layout_below="@id/button5"
        android:layout_marginTop="0sp"
        
        />

</RelativeLayout>